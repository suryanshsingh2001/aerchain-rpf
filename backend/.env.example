# Server
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/rfp_db?schema=public"

# Google Gemini AI
GEMINI_API_KEY="your-gemini-api-key"

# Email (SMTP - for sending emails)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="RFP System <your-email@gmail.com>"

# Email (IMAP - for receiving emails)
# For Gmail: Enable IMAP in Gmail settings and use App Password
# Host: imap.gmail.com, Port: 993
IMAP_HOST="imap.gmail.com"
IMAP_PORT=993
IMAP_USER="your-email@gmail.com"
IMAP_PASS="your-app-password"
IMAP_TLS=true
IMAP_POLLING_INTERVAL=2

# Inbound Email Webhook Secret (for verification - alternative to IMAP)
EMAIL_WEBHOOK_SECRET="your-webhook-secret"
